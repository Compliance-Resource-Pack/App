  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--experimental-modules",
        "--trace-warnings"
      ],
      "program": "${workspaceFolder}\\main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch test App",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--experimental-modules",
        "--trace-warnings"
      ],
      "envFile": "${workspaceFolder}/tests/.env.test",
      "program": "${workspaceFolder}\\main.js"
    }
  ]
}