  "dependencies": {
    "@vitejs/plugin-vue2": "^2.3.1",
    "axios": "^1.6.5",
    "btoa": "^1.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "moment": "^2.30.1",
    "node-domexception": "^2.0.1",
    "node-fetch": "^3.3.2",
    "node-localstorage": "^3.0.5",
    "prettier": "^3.2.4",
